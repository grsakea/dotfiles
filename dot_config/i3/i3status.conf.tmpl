general {
    colors = true
    interval = 5
}

order += "disk /home"

{{ if .laptop }}
order += "wireless _first_"
order += "ethernet _first_"
{{ end }}

{{ if index . "additional_disk" }}
order += "disk {{.additional_disk}}"
{{ end }}


{{ if .laptop }}
order += "battery all"
{{ end }}

order += "load"
order += "tztime local"

{{ if .laptop }}
wireless _first_ {
    format_up = "W: (%quality at %essid) %ip"
    format_down = "W: down"
}

ethernet _first_ {
    # if you use %speed, i3status requires root privileges
    format_up = "E: %ip (%speed)"
    format_down = "E: down"
}

battery all {
    format = "%status %percentage %remaining"
}
{{ end }}

{{ if index . "additional_disk" }}
disk "{{ .additional_disk }}" {
    format = "%avail"
    low_threshold = 5
}
{{ end }}

tztime local {
    format = "%Y-%m-%d %H:%M:%S"
}

load {
    format = "%1min %5min %15min"
}

disk "/home" {
    format = "%avail"
}
