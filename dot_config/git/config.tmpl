{{ if index . "git_gpg_key" }}
[commit]
    gpgSign = true
[user]
    signingkey = {{ .git_gpg_key }}
{{ end }}
[core]
    autocrlf = input

[push]
    default = simple

[filter "lfs"]
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f

[color]
    ui = auto
